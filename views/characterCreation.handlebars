<h1>Character Creation</h1>
  
  <form>
    <div class="form-group">
      <label for="characterName" class="form-label">Character Name</label>
      <input type="text" id="characterName" name="characterName" class="form-input" required>
    </div>
    
    <div class="form-group">
      <label for="characterClass" class="form-label">Character Class</label>
      <select id="characterClass" name="characterClass" class="form-select" required>
        <option value="" disabled selected>Select a class</option>
        {{#each characterClasses}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
    
    <div class="form-group">
      <label for="weaponChoice" class="form-label">Weapon Choice</label>
      <select id="weaponChoice" name="weaponChoice" class="form-select" required>
        <option value="" disabled selected>Select a weapon</option>
        {{#each weaponChoices}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
    
    <button type="submit" class="form-submit">Create Character</button>
  </form>
  
  <h2>Choose Existing Character</h2>
  
  <select id="existingCharacter" name="existingCharacter" class="form-select">
    <option value="" disabled selected>Select an existing character</option>
    {{#each existingCharacters}}
      <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>
  
  <button id="selectCharacter" class="form-submit">Select Character</button>