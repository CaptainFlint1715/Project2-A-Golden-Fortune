<div class="container-fluid h-100">
    <div class="row">
        <div class="col-md-4 custom-bg-teal d-flex align-items-center">
            <div class="text-conversation">
                <p class="text-warning fw-bold fs-5">{{ sceneData.text }}</p>
            </div>
        </div>
        <div class="col-md-8">
            <div class="image-container">
                <img src="{{ sceneData.image }}" alt="Scene Image" class="img-fluid">
            </div>
        </div>
    </div>

    {{#if choiceData.length}}
    <div class="row mt-3">
        <div id="choose-path" class="col-md-12 d-flex justify-content-center">
            <ul>
                {{#each choiceData}}
                    {{#if this.story_ending}}
                        <a href="#" onclick="location.replace('/profile')" class="btn btn-warning txt-dark fs-6 fw-bold" data-triggered-scene="{{ this.triggered_scene_id }}"
                            data-id="{{ this.id }}" data-story-ending="{{ this.story_ending }}" type="choose">
                            {{ this.text }}
                        </a>
                    {{else}}
                        <a href="#" onclick="location.replace(`/scene/{{ this.triggered_scene_id }}`);" class="btn btn-warning txt-dark fs-6 fw-bold" data-triggered-scene="{{ this.triggered_scene_id }}"
                            data-id="{{ this.id }}" data-story-ending="{{ this.story_ending }}" data-trigger="{{this.triggered_scene_id}}" type="choose">
                            {{ this.text }}
                        </a>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    {{/if}}
</div>