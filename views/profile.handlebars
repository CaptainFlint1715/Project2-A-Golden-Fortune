<style>
  body {
    background-color: black;
    margin: 0;
    padding: 0;
  }

  .container-fluid {
    background-image: url('assets/img/piratewall.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 20px;
  }

  .text-bubble {
    background-color: black;
    padding: 5px;
    border-radius: 10px;
    color: orange;
    font-size: 12px;
    margin-bottom: 10px;
    width: calc(100vw / 9);
    margin-left: auto;
  }

  .start-button {
    background-color: black;
    padding: 20px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: orange;
    font-size: 24px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .start-button:hover {
    background-color: rgb(2, 136, 125);
  }


  .past-adventures {
    position: absolute;
    top: 20px;
    right: 10px;
    text-align: right;
    max-height: 80vh;
    overflow-y: scroll;
  }

  .past-adventures::-webkit-scrollbar {
    width: 10px;
    background-color: black;
  }

  .past-adventures::-webkit-scrollbar-thumb {
    background-color: orange;
  }

  .past-adventures::-webkit-scrollbar-track {
    background-color: black;
  }

  .past-adventures::-webkit-scrollbar-track-piece {
  margin-right: -10px;
}

  .welcome-text {
    color: rgb(238, 72, 60);
    font-size: 8rem;
    -webkit-text-stroke: 1px black;
    -webkit-text-fill-color: rgb(255, 87, 57);
  }


  @media (max-width: 768px) {
    .welcome-text {
      font-size: 4rem;
    }
  }

  @media (max-width: 480px) {
    .welcome-text {
      font-size: 2rem;
    }
  }
</style>

<body>
  <div class="container-fluid">
    <div>
      <h1 class="fw-bold display-1 welcome-text">WELCOME, {{userData.name}}!</h1>
      <button id="logout"
        class="btn btn-warning btn-lg text-gold fw-bold position-absolute bottom-0 start-0 mb-3 ml-3">Logout</button>
    </div>

    <button class="start-button fw-bold" id="start-adventure-button" style="color: orange;"
      data-user="{{ userData.id }}">START NEW ADVENTURE</button>

    <div class="past-adventures">
      <h3 style="color: orange;">Past Adventures</h3>

      {{#if groupedTextData.length}}
      {{#each groupedTextData}}
      <div class="text-warning fw-bold text-sm text-bubble">
        <ul style="list-style-type: none; padding: 0; margin-bottom: 0;">
          {{#each this.choices}}
          {{#if this}}
          <li>{{this}},</li> <!-- Add a comma if there is text for the choice -->
          {{/if}}
          {{/each}}
        </ul>
      </div>
      {{/each}}
      {{else}}
      <p class="text-bubble">No past adventures.</p>
      {{/if}}
    </div>
  </div>
</body>