<div class="main-container">
  <div class="row align-center text-warning">
    <div class="col-md-6">
      <div class="signup-container">
        <h2>Signup</h2>
        <p>Create your account now</p>

        <form class="form signup-form">
          <div class="form-group">
            <label for="name-signup">Name</label>
            <input class="form-input" type="text" id="name-signup" />
          </div>
          <div class="form-group">
            <label for="password-signup">Password</label>
            <input class="form-input" type="password" id="password-signup" />
          </div>
          <button id="signup" class="submit">Signup</button>
        </form>
      </div>
    </div>

    <div class="col-md-6">
      <div class="login-container">
        <h2>Login</h2>
        <p>Login here</p>

        <form class="form login-form">
          <div class="form-group">
            <label for="name-login">Email</label>
            <input class="form-input" type="text" id="name-login" />
          </div>
          <div class="form-group">
            <label for="password-login">Password</label>
            <input class="form-input" type="password" id="password-login" />
          </div>
          <button id="login" class="submit">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>
