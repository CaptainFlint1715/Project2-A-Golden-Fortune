 
 <section class="characterMenu">
  <h1>Welcome to the Homepage</h1>
    {{!-- <div>
    <img src="../public/assets/img/piratewall.jpg">
  </div> --}}

  <h2>Your Characters</h2>
  {{#if characters}}
    <ul>
      {{#each characters}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>No characters found.</p>
  {{/if}}

  {{#if canCreateCharacter}}
    <button onclick="createCharacter()">Create New Character</button>
  {{else}}
    <p>Maximum character limit reached (5 characters).</p>
  {{/if}}

  <script>
    function createCharacter() {
      // Redirect to the character creation page
      window.location.href = "/character/create";
    }
  </script>
  </section>